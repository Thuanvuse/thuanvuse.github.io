        self.key_timer.start(60000)  # C·∫≠p nh·∫≠t m·ªói ph√∫t

    def update_balance_display(self):
        self.balance_label.setText(f"S·ªë d∆∞ hi·ªán t·∫°i: {self.balance:,} VND")

    def start_payment(self):
        self.btn_retry.setVisible(False)
        self.time_left = 180
        self.label_timer.setText("‚è≥ Th·ªùi gian c√≤n l·∫°i: 180s")
        self.random_des = f"pay{''.join(random.choices(string.digits, k=6))}"

        try:
            amount = int(self.amount_input.text())
            if amount <= 0:
                raise ValueError
        except Exception:
            QMessageBox.warning(self, "L·ªói", "Vui l√≤ng nh·∫≠p s·ªë ti·ªÅn h·ª£p l·ªá!")
            return

        self.amount = amount

        qr_url = f"https://qr.sepay.vn/img?acc={ACCOUNT}&bank={BANK}&amount={amount}&des={self.random_des}"
        try:
            response = requests.get(qr_url)
            pixmap = QPixmap()
            pixmap.loadFromData(response.content)
            self.label_qr.setPixmap(pixmap.scaled(250, 250, Qt.AspectRatioMode.KeepAspectRatio))
        except Exception as e:
            self.label_qr.setText(f"L·ªói t·∫£i QR: {e}")
            return

        self.timer.start(1000)
        self.check_transaction()

    def update_timer(self):
        self.time_left -= 1
        self.label_timer.setText(f"‚è≥ Th·ªùi gian c√≤n l·∫°i: {self.time_left}s")
        if self.time_left <= 0:
            self.timer.stop()
            self.btn_retry.setVisible(True)
            QMessageBox.warning(self, "H·∫øt th·ªùi gian", "Kh√¥ng th·∫•y giao d·ªãch. Vui l√≤ng th·ª≠ l·∫°i!")

    def check_transaction(self):
        def check():
            if self.time_left <= 0:
                return
            try:
                url = f"https://my.sepay.vn/userapi/transactions/list?account_number={ACCOUNT}&limit=20"
                headers = {"Authorization": f"Bearer {TOKEN}"}
                res = requests.get(url, headers=headers).json()
                for tx in res.get("transactions", []):
                    if self.random_des in (tx.get("transaction_content") or "") and float(tx["amount_in"]) == self.amount:
                        self.timer.stop()
                        self.balance += self.amount
                        save_balance(self.balance)
                        self.update_balance_display()
                        QMessageBox.information(self, "‚úÖ Th√†nh c√¥ng", f"ƒê√£ nh·∫≠n: {self.amount:,} VND\nN·ªôi dung: {self.random_des}")
                        return
            except Exception as e:
                print("L·ªói ki·ªÉm tra:", e)
            QTimer.singleShot(3000, self.check_transaction)

        QTimer.singleShot(1000, check)

    def load_key_history(self):
        history = load_key_history()
        if history:
            text = ""
            for key_info in history:
                expire_time = time.strftime('%d/%m/%Y %H:%M:%S', time.localtime(key_info["expire_time"]))
                text += f"Key: {key_info['key']}\n"
                text += f"H·∫°n d√πng: {expire_time}\n"
                text += f"S·ªë lu·ªìng: {key_info['threads']}\n"
                text += "-" * 30 + "\n"
            self.key_history_text.setText(text)

    def open_app(self):
        key_info = load_key_info()
        if not is_key_valid(key_info):
            QMessageBox.critical(self, "L·ªói", "Tool ƒë√£ h·∫øt h·∫°n! Vui l√≤ng mua key m·ªõi.")
            return
        
        # Ki·ªÉm tra th·ªùi gian c√≤n l·∫°i
        now = int(time.time())
        time_left = key_info["expire_time"] - now
        hours_left = time_left // 3600
        minutes_left = (time_left % 3600) // 60
        
        # Hi·ªÉn th·ªã th√¥ng b√°o x√°c nh·∫≠n
        reply = QMessageBox.question(
            self, 
            "X√°c nh·∫≠n", 
            f"Key c√≤n h·∫°n: {hours_left} gi·ªù {minutes_left} ph√∫t\n"
            f"S·ªë lu·ªìng: {key_info['threads']}\n\n"
            "B·∫°n c√≥ mu·ªën m·ªü tool kh√¥ng?",
            QMessageBox.StandardButton.Yes | QMessageBox.StandardButton.No
        )
        
        if reply == QMessageBox.StandardButton.Yes:
            try:
                exe_path = os.path.join(os.getcwd(), "ABCXYZ.exe")
                subprocess.Popen([exe_path], shell=True)
                self.close()  # ƒê√≥ng c·ª≠a s·ªï n·∫°p ti·ªÅn
            except Exception as e:
                QMessageBox.critical(self, "L·ªói", f"Kh√¥ng th·ªÉ m·ªü tool: {str(e)}")

    def update_current_key_display(self):
        key_info = load_key_info()
        if not key_info or not is_key_valid(key_info):
            self.current_key_label.setText("Ch∆∞a c√≥ key ho·∫∑c key ƒë√£ h·∫øt h·∫°n")
            self.current_key_label.setStyleSheet("""
                QLabel {
                    background-color: #f8d7da;
                    color: #721c24;
                    padding: 10px;
                    border-radius: 5px;
                    border: 1px solid #f5c6cb;
                }
            """)
            self.btn_delete_key.setEnabled(False)  # V√¥ hi·ªáu h√≥a n√∫t x√≥a khi kh√¥ng c√≥ key
            return

        now = int(time.time())
        time_left = key_info["expire_time"] - now
        hours_left = time_left // 3600
        minutes_left = (time_left % 3600) // 60

        self.current_key_label.setText(
            f"Key: {key_info['key']}\n"
            f"Th·ªùi gian c√≤n l·∫°i: {hours_left} gi·ªù {minutes_left} ph√∫t\n"
            f"S·ªë lu·ªìng: {key_info['threads']}"
        )
        self.current_key_label.setStyleSheet("""
            QLabel {
                background-color: #d4edda;
                color: #155724;
                padding: 10px;
                border-radius: 5px;
                border: 1px solid #c3e6cb;
            }
        """)
        self.btn_delete_key.setEnabled(True)  # K√≠ch ho·∫°t n√∫t x√≥a khi c√≥ key

    def buy_key(self):
        pkg = self.key_combo.currentData()
        if self.balance < pkg["price"]:
            QMessageBox.warning(self, "L·ªói", f"S·ªë d∆∞ kh√¥ng ƒë·ªß! C·∫ßn {pkg['price']:,} VND")
            return

        # T·∫°o key
        now = int(time.time())
        expire_time = now + pkg["hours"] * 3600
        key = f"DEMO-{pkg['threads']}T-{pkg['hours']}H-{now}"
        
        # L∆∞u key
        key_info = {
            "key": key,
            "threads": pkg["threads"],
            "expire_time": expire_time,
            "purchase_time": now,
            "package": pkg["label"]
        }
        save_key_info(key_info)
        
        # L∆∞u v√†o l·ªãch s·ª≠
        history = load_key_history()
        history.append(key_info)
        save_key_history(history)
        
        # Tr·ª´ ti·ªÅn
        self.balance -= pkg["price"]
        save_balance(self.balance)
        self.update_balance_display()
        
        # C·∫≠p nh·∫≠t hi·ªÉn th·ªã l·ªãch s·ª≠ v√† key hi·ªán t·∫°i
        self.load_key_history()
        self.update_current_key_display()
        
        # Hi·ªÉn th·ªã th√¥ng b√°o th√†nh c√¥ng v√† h·ªèi c√≥ mu·ªën v√†o app kh√¥ng
        reply = QMessageBox.question(
            self, 
            "Th√†nh c√¥ng", 
            f"ƒê√£ mua key th√†nh c√¥ng!\n"
            f"Key: {key}\n"
            f"H·∫°n d√πng ƒë·∫øn: {time.strftime('%d/%m/%Y %H:%M:%S', time.localtime(expire_time))}\n"
            f"S·ªë lu·ªìng: {pkg['threads']}\n\n"
            "B·∫°n c√≥ mu·ªën m·ªü tool ngay kh√¥ng?",
            QMessageBox.StandardButton.Yes | QMessageBox.StandardButton.No
        )
        
        if reply == QMessageBox.StandardButton.Yes:
            self.open_app()

    def delete_key(self):
        key_info = load_key_info()
        if not key_info:
            QMessageBox.warning(self, "L·ªói", "Kh√¥ng c√≥ key ƒë·ªÉ x√≥a!")
            return

        # Hi·ªÉn th·ªã th√¥ng b√°o x√°c nh·∫≠n
        reply = QMessageBox.question(
            self,
            "X√°c nh·∫≠n x√≥a",
            "B·∫°n c√≥ ch·∫Øc ch·∫Øn mu·ªën x√≥a key hi·ªán t·∫°i kh√¥ng?\n"
            "L∆∞u √Ω: Key ƒë√£ x√≥a kh√¥ng th·ªÉ kh√¥i ph·ª•c!",
            QMessageBox.StandardButton.Yes | QMessageBox.StandardButton.No
        )

        if reply == QMessageBox.StandardButton.Yes:
            try:
                # X√≥a file key
                if os.path.exists(KEY_FILE):
                    os.remove(KEY_FILE)
                
                # C·∫≠p nh·∫≠t hi·ªÉn th·ªã
                self.update_current_key_display()
                
                QMessageBox.information(self, "Th√†nh c√¥ng", "ƒê√£ x√≥a key th√†nh c√¥ng!")
            except Exception as e:
                QMessageBox.critical(self, "L·ªói", f"Kh√¥ng th·ªÉ x√≥a key: {str(e)}")

if __name__ == "__main__":
    app = QApplication(sys.argv)

    window = MainWindow()
    window.show()
    sys.exit(app.exec())
